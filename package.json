{
  "name": "chrome-ssr-inspector",
  "version": "0.1.0",
  "description": "Chrome extension for inspecting SSR (Server-Side Rendering) applications",
  "main": "dist/content.js",
  "scripts": {
    "build": "tsdown && pnpm run copy-static",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "copy-static": "cp manifest.json dist/ && cp -r src/popup/*.html src/popup/*.css dist/popup/ && mkdir -p dist/content && cp src/content/styles.css dist/content/",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "prettier --write src/**/*",
    "format:check": "prettier --check src/**/*",
    "prebuild": "pnpm run clean && mkdir -p dist/popup",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish",
    "package": "bash scripts/package.sh"
  },
  "keywords": [
    "chrome-extension",
    "ssr",
    "server-side-rendering",
    "inspector",
    "devtools"
  ],
  "author": "Leo Chiu",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.5.0",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "oxlint": "^0.9.0",
    "prettier": "^3.3.0",
    "tsdown": "^0.2.13",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leochiu-a/chrome-ssr-inspector.git"
  },
  "bugs": {
    "url": "https://github.com/leochiu-a/chrome-ssr-inspector/issues"
  },
  "homepage": "https://github.com/leochiu-a/chrome-ssr-inspector#readme",
  "lint-staged": {
    "*.{ts,js}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{html,css,json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.18.1"
}
