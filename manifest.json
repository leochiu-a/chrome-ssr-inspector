{
  "manifest_version": 3,
  "name": "Chrome SSR Inspector",
  "version": "0.1.0",
  "description": "Inspect and analyze Server-Side Rendering (SSR) applications in Chrome",
  "author": "Leo Chiu",
  "homepage_url": "https://github.com/leochiu-a/chrome-ssr-inspector",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Chrome SSR Inspector",
    "default_icon": {}
  },
  "icons": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content/styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
